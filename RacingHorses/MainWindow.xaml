<Window x:Class="RacingHorses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RacingHorses"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="myCanvas" Background="AliceBlue" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
        </Canvas>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button Content="Start" Click="StartButton_Click" Margin="10"/>            
            <Button Content="Reset" Click="ResetButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
